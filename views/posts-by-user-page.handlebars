<!-- Page Header -->
<header class="masthead" style="background-image: url('img/home-bg.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Posts by {{username}}</h1>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      {{#each posts as |post| }}
      <div class="post-preview">
        <a href="/post/{{post.id}}">
          <h2 class="post-title">
            {{post.title}}
          </h2>
          <h3 class="post-subtitle">
            {{post.post_content}}
          </h3>
        </a>
        <p class="post-meta">Posted by
          {{post.user.username}}
          on {{format_date post.date_created}}
        </p>
      </div>
      <hr>
      {{/each}}
    </div>
  </div>
</div>